<div class="inner">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
      <%= form_for(@post) do |f| %>
  
        <div class="form-group">
          <%= f.label :title, '投稿タイトル' %>
          <%= f.text_field :title, class: 'form-control', :placeholder => "Title" %>
        </div>
        
        <div class="form-group">
          <%= f.label :image_name, '画像アップロード' %>
          <%= f.file_field :image_name, class: 'form-control', :placeholder => "Upload image" %>
        </div>
  
        <div class="form-group">
          <%= f.label :content, '紹介文' %>
          <%= f.text_area :content, class: 'form-control', :placeholder => "Content", row: 5 %>
        </div>
  
        <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
      <% end %>
  
    </div>
  </div>
</div>
