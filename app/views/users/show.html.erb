
<div class="user_show">
  <div class="inner">
    <div class="row">
      <aside class="col-xs-4">
             <%= image_tag @user.image_name, class: 'user-profile-image' %>
      </aside>
      <div class="edit-profile-box">
        <%= link_to 'プロフィールを編集', edit_user_path, class: 'edit-profile-btn' %>

      </div>
      <div class="col-xs-8">
        <%= @user.name %>
      </div>  
      
      <div class="right-aside">
        <div class="col-xs-8">
          <ul class="nav nav-tabs nav-justified">
            <li class="active">投稿：<%= @count_posts %>件</li>
            <li class="">xx人をフォロー</li>
            <li class="">xx人のフォロワー</li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="tab-area">
      <div class="col-xs-offset-2 col-xs-8">
        <ul class="nav nav-tabs nav-justified">
          <li class="active">投稿一覧</li>
          <li class="">フォロー</li>
          <li class="">フォロワー</li>
        </ul>
      </div> 
    </div>  
    <div class="row">
      <div class="new-post-area">
      <div class="new-post-btn">
          <%= link_to '新規投稿', new_post_path %>
      </div>
    </div>  
    <div class="show-posts-area">
      <%= render 'posts/posts', posts: @posts %>
    </div>    
      
      
    </div>  
      
  </div>
</div>