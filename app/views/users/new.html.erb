<div class="inner">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
          
        <%= form_for(@user) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          
          <div class="form-group">
            <%= f.label :name, 'ユーザーネーム' %>
            <%= f.text_field :name, class: 'form-control', :placeholder => "User name" %>
          </div>
          
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control', :placeholder => "Email" %>
          </div>
          
          <div class="form-group">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>
          </div>
          
          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワード確認' %>
            <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => "Password confirmation" %>
          </div>
          
          <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
</div>