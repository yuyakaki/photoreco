<div class="inner">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
      <%= form_for(@user) do |f| %>
  
        <div class="form-group">
          <%= f.label :name, 'ユーザネーム' %>
          <%= f.text_field :name, class: 'form-control', :placeholder => "User name" %>
        </div>
        
        <div class="form-group">
          <%= f.label :image_name, 'プロフィール画像' %>
          <%= f.file_field :image_name, class: 'form-control', :placeholder => "Upload image" %>
        </div>
  
        <div class="form-group">
          <%= f.label :content, '自己紹介文' %>
          <%= f.text_area :content, class: 'form-control', :placeholder => "Content", row: 5 %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email, class: 'form-control', :placeholder => "Email" %>
        </div>
  
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>
        </div>
        
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード確認' %>
          <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => "Password confirmation" %>
        </div>
      
        <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
      <% end %>
  </div>
  <% if current_user.id == @user.id %>
  <div class="user-destroy-box">
    <%= link_to 'アカウントを削除', user_path, method: :delete, data: { confirm: '本当に削除しますか？'} %>
  </div>
  <% end %>  

  </div>
</div>