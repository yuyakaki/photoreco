
<div class="user_show">
  <div class="inner">
    <div class="row">
      <aside class="col-xs-4">
             <%= image_tag @user.image_name.to_s, class: 'user-profile-image' %>
      </aside>
      <% if current_user.id == @user.id %> 
      <div class="edit-profile-box">
        <%= link_to 'プロフィールを編集', edit_user_path, class: 'edit-profile-btn' %>
      </div>
      <% end %>
      <div class="col-xs-8">
        <%= @user.name %>
      </div>  
      
      <div class="right-aside">
        <div class="col-xs-8">
          <ul class="nav nav-tabs nav-justified">
            <li class="active">投稿：<%= @count_posts %>件</li>
            <li class=""><%= @count_followings %>人をフォロー</li>
            <li class=""><%= @count_followers %>人のフォロワー</li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="tab-area">
      <div class="col-xs-offset-2 col-xs-8">
       <ul class="nav nav-justified">
          <li class=" <%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>投稿一覧<% end %></li>
          <li class=" <%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>フォロー<% end %></li>
          <li class="active-color <%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>フォロワー<% end %></li>
        </ul>
      </div> 
    </div>  
    <div class="row">
      <div class="new-post-area">

    </div>  
      <%= render 'users', users: @followers %>
  
      
      
    </div>  
      
  </div>
</div>